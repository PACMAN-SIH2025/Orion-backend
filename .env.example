# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=true
APP_NAME=Orion Backend
VERSION=1.0.0
ENVIRONMENT=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key for your application
# You can generate one using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Configuration - REMOVED (Using Supabase authentication)
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS AND ALLOWED HOSTS
# =============================================================================
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/orion_db

# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./orion.db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis for caching and Celery message broker
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (uses Redis by default)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
# Choose one vector database service:

# Option 1: Pinecone (Managed vector database)
VECTOR_DB_URL=https://your-index-name-xxxxx.svc.environment.pinecone.io
VECTOR_DB_API_KEY=your-pinecone-api-key

# Option 2: ChromaDB (Local/Self-hosted)
# VECTOR_DB_URL=http://localhost:8000
# VECTOR_DB_API_KEY=""

# Option 3: Weaviate (Local/Cloud)
# VECTOR_DB_URL=http://localhost:8080
# VECTOR_DB_API_KEY=your-weaviate-api-key

# =============================================================================
# AI/LLM API KEYS
# =============================================================================
# Google Gemini API Key (Primary LLM Service)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: Anthropic Claude API Key (Alternative LLM)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: Hugging Face API Key (For additional models)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# =============================================================================
# RAG CONFIGURATION
# =============================================================================
# Embedding and LLM Models
EMBEDDING_MODEL=models/embedding-001
LLM_MODEL=gemini-1.5-flash

# Text Processing Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS=2000

# =============================================================================
# FILE INGESTION CONFIGURATION
# =============================================================================
# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=50

# Supported file types for ingestion
SUPPORTED_FILE_TYPES=[".pdf",".txt",".docx",".md",".html"]

# =============================================================================
# CRAWL4AI CONFIGURATION
# =============================================================================
# Web scraping configuration for document ingestion
CRAWL4AI_ENABLED=true
CRAWL4AI_MAX_PAGES=50
CRAWL4AI_TIMEOUT=30
CRAWL4AI_USER_AGENT=OrionBot/1.0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/orion.log

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================
# Set these to 'false' in production
RELOAD_ON_CHANGE=true
SHOW_DOCS=true

# Additional security headers (set to 'true' in production)
FORCE_HTTPS=false
SECURE_COOKIES=false

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Optional: Sentry for error tracking
# SENTRY_DSN=your-sentry-dsn-here

# Optional: Analytics tracking
# ANALYTICS_ENABLED=false
# GOOGLE_ANALYTICS_ID=your-ga-id

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# For sending notifications and alerts
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@yourorganization.com

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Rate limiting and security
# RATE_LIMIT_PER_MINUTE=60
# MAX_CONCURRENT_REQUESTS=100

# File storage (if using cloud storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-s3-bucket-name
# AWS_REGION=us-east-1